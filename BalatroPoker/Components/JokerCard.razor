@using BalatroPoker.Models

<div class="joker-card">
    <svg width="100" height="130" viewBox="0 0 120 150" xmlns="http://www.w3.org/2000/svg" class="joker-svg">
        <!-- Joker Background -->
        <defs>
            <linearGradient id="jokerGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#7c3aed;stop-opacity:1" />
                <stop offset="50%" style="stop-color:#a855f7;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#9333ea;stop-opacity:1" />
            </linearGradient>
            <filter id="glow">
                <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
                <feMerge> 
                    <feMergeNode in="coloredBlur"/>
                    <feMergeNode in="SourceGraphic"/>
                </feMerge>
            </filter>
        </defs>
        
        <!-- Card Border with Glow -->
        <rect x="2" y="2" width="116" height="146" rx="8" ry="8" 
              fill="url(#jokerGradient)" 
              stroke="#fbbf24" 
              stroke-width="2" 
              filter="url(#glow)" />
        
        <!-- Joker Symbol -->
        <text x="60" y="60" font-family="Arial, sans-serif" font-size="48" font-weight="bold" 
              fill="#fbbf24" text-anchor="middle">üÉè</text>
        
        <!-- Joker Name -->
        <text x="60" y="105" font-family="Arial, sans-serif" 
              font-size="@(Joker.Name.Length > 12 ? "10" : "12")" font-weight="bold" 
              fill="#ffffff" text-anchor="middle">@Joker.Name</text>
    </svg>
    
    <div class="joker-description">
        <small class="text-light">@Joker.Description</small>
    </div>
</div>

@code {
    [Parameter] public Joker Joker { get; set; } = new();
}